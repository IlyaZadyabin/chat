# Root .env for Docker Compose
# Services use their own .env files (auth/.env and chat_server/.env) for full configuration
# This file only contains variables needed by docker-compose.yaml

# Database Configuration (for docker-compose database services)
AUTH_POSTGRES_DB=auth
AUTH_POSTGRES_USER=auth_user
AUTH_POSTGRES_PASSWORD=change_me_in_production

CHAT_POSTGRES_DB=chat
CHAT_POSTGRES_USER=chat_user
CHAT_POSTGRES_PASSWORD=change_me_in_production

# Service Ports (for docker-compose port mappings)
AUTH_GRPC_PORT=50051
AUTH_HTTP_PORT=8081
AUTH_SWAGGER_PORT=8082
AUTH_METRICS_PORT=2112
CHAT_GRPC_PORT=50052
